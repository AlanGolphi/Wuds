generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String        @id @default(cuid())
  email        String        @unique
  name         String?
  role         Role          @default(USER)
  uploadImages UploadImage[]
}

model UploadImage {
  id         String   @id @default(cuid())
  url        String
  createDate DateTime @default(now())
  userId     String
  user       User     @relation(fields: [userId], references: [id])
}

enum Role {
  GOD
  ADMIN
  USER
}
